%h1 Add New Timestamp
.row-fluid
  %h4 Time now:
  #clock
  = simple_form_for @timestamp do |f| 
    .control-group
      .controls
        =f.association :project
    .control-group
      .controls
        =f.association :client
        =f.hidden_field :start_time, value: Time.now
    .control-group
      .controls
        =f.submit "Add new Timestamp", id: "add_timestamp", class: "btn btn-primary"

            


